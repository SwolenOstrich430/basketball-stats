{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Pytest Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Debug All Pytest Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}